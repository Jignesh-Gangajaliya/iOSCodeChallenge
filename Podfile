# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

target 'CavistaCodeChallenge' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for CavistaCodeChallenge
  
  # Aamofire Use for HTTP networking
  #https://github.com/Alamofire/Alamofire
  pod 'Alamofire', '5.2.2'
  
  #SnapKit Use for make Auto Layout easy on both iOS
  #https://github.com/SnapKit/SnapKit
  pod 'SnapKit', '5.0.1'
  
  #RealmSwift Use for realm class for Database
  #https://github.com/realm/realm-cocoa.git
  pod 'RealmSwift', '5.0.0'
  
  #Kingfisher Use for Downloading Cashing the Image
  #https://github.com/onevcat/Kingfisher
  pod 'Kingfisher', '5.13.4'
  
  #Lightbox For view images in full screen
  #https://github.com/hyperoslo/Lightbox
  pod 'Lightbox', '2.4.2'
end
